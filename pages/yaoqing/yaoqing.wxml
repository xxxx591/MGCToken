<form bindsubmit="formSubmit">
<view class='erweima'>
  <text>您的专属二维码</text>
</view>
  <canvas style="width: 400rpx;height: 400rpx;background:#f1f1f1;margin:0 auto;" canvas-id="mycanvas" />
  <view class='appointment'>
    <view class='input-box'>
      <text style='flex:1;'>邀请码：</text>
      <input style='flex:2;' placeholder='dhNKwZ' value='dhNKwZ' type='text' name="code" maxlength='6' bindinput="getCode">
      </input>
      <text style='flex:1;padding-left: 33rpx;color:#278BEF;border-left:1rpx solid #E5E5E5;' bindtap='getVerificationCode'>点击复制</text>
    </view>

    <view>
      <button open-type="contact">
        <view class='submit'>
          <text>联系客服</text>
        </view>
      </button>
    </view>
  </view>
</form>